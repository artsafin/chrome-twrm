{
  "manifest_version": 2,

  "name": "Teamwox/Redmine integration",
  "description": "Adds slight interaction between Teamwox and Redmine",
  "version": "1.0",
  "icons": {"16": "res/icon/icon-16.png",
            "48": "res/icon/icon-48.png",
            "128": "res/icon/icon-128.png"},

  "background": {
    "scripts": [
      "bower_components/jquery/dist/jquery.min.js",
      "src/configure.js",
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "https://tw.fxtm.com/servicedesk/view/*",
        "https://redmine.fxtm/*"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "bower_components/jqueryui/ui/version.js",
        "bower_components/jqueryui/ui/position.js",
        "src/RedmineApi.js",
        "src/IssueTooltip.js",
        "src/TwCrawler.js",
        "src/utils.js",
        "src/configure.js",
        "src/tw_sd_inject.js"],
      "css": ["views/issue_tooltip.css"]
    },
    {
      "matches": [
        "https://redmine.fxtm/*"
      ],
      "js": ["bower_components/jquery/dist/jquery.min.js", "src/configure.js", "src/rm_inject.js"]
    },
    {
      "matches": [
        "https://tw.fxtm.com/*"
      ],
      "run_at": "document_start",
      "js": ["bower_components/jquery/dist/jquery.min.js", "src/configure.js", "src/tw_inject.js"]
    },
    {
      "all_frames": true,
      "matches": [
        "https://tw.fxtm.com/*"
      ],
      "css": ["views/search_bar.css"]
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "res/icon/icon-19.png",
      "38": "res/icon/icon-38.png"
    },
    "default_title": "See extension options",
    "default_popup": "views/popup.html"
  },

  "options_ui": {
    "page": "views/options.html",
    "chrome_style": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "activeTab",
    "https://tw.fxtm.com/*",
    "https://redmine.fxtm/*"
  ]
}
